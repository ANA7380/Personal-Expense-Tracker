<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="app.Controller">
    <top>
        <VBox spacing="15" style="-fx-padding: 15;">
            <HBox alignment="CENTER" maxWidth="Infinity">
                <Label text="个人记账软件" style="-fx-font-size: 20px; -fx-font-weight: bold;">
                    <HBox.margin>
                        <Insets bottom="10"/>
                    </HBox.margin>
                </Label>
            </HBox>
            <HBox spacing="20" alignment="CENTER">
                <!-- 支出区域 -->
                <VBox spacing="10" style="-fx-padding: 10; -fx-border-color: #ff6b6b; -fx-border-width: 2; -fx-border-radius: 5;">
                    <HBox alignment="CENTER" maxWidth="Infinity">
                        <Label text="支出" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #ff6b6b;"/>
                    </HBox>
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints minWidth="50" prefWidth="60"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="120"/>
                        </columnConstraints>
                        <Label text="描述:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="expenseDescField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Label text="金额:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="expenseAmountField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label text="日期:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <DatePicker fx:id="expenseDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="150"/>
                        <Label text="类别:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="expenseCategoryField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>
                    <HBox spacing="10" alignment="CENTER">
                        <Button text="添加" onAction="#addExpense" prefWidth="80"/>
                        <Button text="删除" onAction="#deleteExpense" prefWidth="80"/>
                    </HBox>
                </VBox>
                
                <!-- 收入区域 -->
                <VBox spacing="10" style="-fx-padding: 10; -fx-border-color: #51cf66; -fx-border-width: 2; -fx-border-radius: 5;">
                    <HBox alignment="CENTER" maxWidth="Infinity">
                        <Label text="收入" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #51cf66;"/>
                    </HBox>
                    <GridPane hgap="10" vgap="10">
                        <columnConstraints>
                            <ColumnConstraints minWidth="50" prefWidth="60"/>
                            <ColumnConstraints hgrow="ALWAYS" minWidth="120"/>
                        </columnConstraints>
                        <Label text="描述:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="incomeDescField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        <Label text="金额:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="incomeAmountField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        <Label text="日期:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <DatePicker fx:id="incomeDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" prefWidth="150"/>
                        <Label text="类别:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <TextField fx:id="incomeCategoryField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    </GridPane>
                    <HBox spacing="10" alignment="CENTER">
                        <Button text="添加" onAction="#addIncome" prefWidth="80"/>
                        <Button text="删除" onAction="#deleteIncome" prefWidth="80"/>
                    </HBox>
                </VBox>
            </HBox>
            <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10;">
                <Button fx:id="reportButton" text="生成报表" onAction="#generateReport" prefWidth="120"/>
                <Button fx:id="exportButton" text="导出CSV" onAction="#exportToCSV" prefWidth="120"/>
            </HBox>
        </VBox>
    </top>
    <center>
        <TableView fx:id="transactionTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn text="ID" fx:id="idCol" prefWidth="50"/>
                <TableColumn text="描述" fx:id="descCol" prefWidth="150"/>
                <TableColumn text="金额" fx:id="amountCol" prefWidth="100"/>
                <TableColumn text="日期" fx:id="dateCol" prefWidth="120"/>
                <TableColumn text="类别" fx:id="categoryCol" prefWidth="100"/>
                <TableColumn text="类型" fx:id="typeCol" prefWidth="80"/>
            </columns>
        </TableView>
    </center>
</BorderPane>